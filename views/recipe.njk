{% extends "layout.njk" %}
{% block head %}{% endblock head %}

{% block content %}

    <section class="recipe-template">
        <div class="recipe" id="{{recipe.id}}">
            <div class="recipe-image">
                <img src="{{recipe.img}} " alt="image of {{recipe.title}}">
            </div>
        </div>
        <div class="recipe-text-header-title">
            <h1>{{recipe.title}}
            </h1>
            <p>por
                {{ recipe.madeBy}}
            </p>
        </div>

        <div class="recipe-text-header">

            <h2>Ingredientes</h2>
            <h3 class="on" id="on1">esconder</h3>
        </div>
        <div class="recipe-text-box" id="recipe-text-box1">
            <ul>
                {% for ingredient in recipe.ingredients %}
                    <li>{{ingredient}}</li>
                {% endfor %}

            </ul>
        </div>

        <div class="recipe-text-header">
            <h2>Preparação</h2>
            <h3 class="on" id="on2">esconder</h3>
        </div>
        <div class="recipe-text-box" id="recipe-text-box2">
            <ul>
                {% for prepar in recipe.preparation %}
                    <li>{{prepar}}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="recipe-text-header">
            <h2>Informações Adicionais</h2>
            <h3 class="on" id="on3">esconder</h3>
        </div>
        <div class="recipe-text-box" id="recipe-text-box3">
            <p>{{recipe.information}}
            </p>
        </div>
    </section>
   
{% endblock content %}